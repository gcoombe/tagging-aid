{
    "name": "Pendo Tagging Aid",
    "short_name": "PendoTA",
    "version": "1.2",
    "manifest_version": 2,
    "description": "See what ids, classes, and attributes are in the DOM. Enhance your feature tagging experience with the Pendo Product Cloud.",
    "homepage_url": "http://pendo.io",
    "icons": {
        "16": "src/ui/images/pendo_target_16.png",
        "48": "src/ui/images/pendo_target_48.png",
        "128": "src/ui/images/pendo_target_128.png"
    },
    "browser_action": {
        "default_icon": "src/ui/images/pendo_target_48.png",
        "default_title": "Pendo Tagging Aid"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        "src/*"
    ],
    "background": {
        "scripts": ["js/background.js"]
    }
}