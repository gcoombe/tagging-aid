{
    "name": "Pendo Tagging Aid",
    "short_name": "PendoTA",
    "version": "2.1",
    "manifest_version": 2,
    "description": "See what ids, classes, and elements are in the DOM. Enhance your feature tagging experience within the Pendo Product Cloud.",
    "homepage_url": "http://pendo.io",
    "icons": {
        "16": "src/ui/images/pendo_target_16.png",
        "48": "src/ui/images/pendo_target_48.png",
        "128": "src/ui/images/pendo_target_128.png"
    },
    "browser_action": {
        "default_icon": "src/ui/images/pendo_target_48.png",
        "default_title": "Pendo Tagging Aid",
        "default_popup": "src/ui/popup.html"
    },
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        "src/*"
    ]
}