{
    "manifest_version": 2,
    "name": "Pendo Tagging Aid",
    "description": "This extension lets you see what ids, classes, and attributes are in the DOM",
    "version": "1.0",
    "browser_action": {
        "default_icon": "./src/ui/images/pendo_target.png",
        "default_title": "Pendo Tagging Aid"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        "src/*"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}